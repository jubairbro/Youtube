<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.YouTubeLite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">#CC0000</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#FF0000</item>
        <item name="colorSecondaryVariant">#CC0000</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowBackground">#000000</item>
    </style>

    <style name="Theme.YouTubeLite.Splash" parent="Theme.YouTubeLite">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Widget.YouTubeLite.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FF0000</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">24dp</item>
    </style>

</resources>
