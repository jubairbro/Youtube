<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/main_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/offline_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_no_net"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_wifi_off"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txt_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_no_net"
                android:text="CONNECTION LOST"
                android:textColor="#FF0000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_err"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="RETRY SYSTEM"
                android:textColor="#000000"
                android:backgroundTint="#FF0000"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fullscreen_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#000000" />
            
        <Button
            android:id="@+id/btn_menu_trigger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â‰¡"
            android:textSize="20sp"
            android:textColor="#00FF00"
            android:background="#00000000"
            android:layout_gravity="top|start"/>
            
    </FrameLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111111"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="SENSEI MODULE"
            android:textColor="#00FF00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btn_audio_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Mode: OFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:layout_marginBottom="10dp"/>
            
        <Button
            android:id="@+id/btn_external_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play External (VLC)"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Force Reload"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"/>
            
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
