<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/neon_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:text="SENSEI CONTROLS"
        android:textColor="#00FF00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Background Audio"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
        <Switch
            android:id="@+id/switch_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#00FF00"
            android:trackTint="#555555"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333333" android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/btn_pip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <TextView android:text="ðŸ“º  Picture-in-Picture (PiP)" android:textColor="#00FFFF" android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_reload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <TextView android:text="ðŸ”„  Reload System" android:textColor="#FFFFFF" android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <TextView android:text="âœ˜  Exit App" android:textColor="#FF0000" android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
